<UserControl x:Class="NINA.Plugin.TargetScheduler.Controls.PlanPreview.PlanPreviewerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:rules="clr-namespace:NINA.Plugin.TargetScheduler.Controls.ValidationRules"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary Source="../Resources/Resources.xaml" />
    </UserControl.Resources>

    <StackPanel>
        <Border Margin="0,10,0,10"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1">
            <StackPanel>
                <TextBlock Width="480"
                           Margin="15"
                           HorizontalAlignment="Left"
                           FontStyle="Italic"
                           Text="Previews are not meant to reflect the exact behavior of the sequence instruction. Please read the documentation (link above) to understand how a preview will differ from a real run."
                           TextWrapping="Wrap" />

                <Grid Width="400"
                      Margin="5,5,5,10"
                      HorizontalAlignment="Left">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="300" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition MinHeight="25" />
                        <RowDefinition MinHeight="25" />
                        <RowDefinition MinHeight="25" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Grid.Column="0"
                               MaxWidth="80"
                               VerticalAlignment="Center"
                               FontWeight="Bold"
                               Text="Date/Time" />
                    <StackPanel Grid.Row="0"
                                Grid.Column="1"
                                Orientation="Horizontal">
                        <DatePicker VerticalAlignment="Center"
                                    SelectedDate="{Binding PlanDate}" />
                        <TextBlock Margin="5,0,3,0"
                                   VerticalAlignment="Center"
                                   Text="at" />
                        <TextBox Width="30"
                                 Margin="3,0,0,0"
                                 VerticalAlignment="Center">
                            <TextBox.Text>
                                <Binding Path="PlanHours">
                                    <Binding.ValidationRules>
                                        <rules:IntRangeRule>
                                            <rules:IntRangeRule.ValidRange>
                                                <rules:IntRangeChecker Maximum="23"
                                                                       Minimum="0" />
                                            </rules:IntRangeRule.ValidRange>
                                        </rules:IntRangeRule>
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>
                        <TextBlock VerticalAlignment="Center"
                                   Text=":" />
                        <TextBox Width="30"
                                 Margin="3,0,0,0"
                                 VerticalAlignment="Center">
                            <TextBox.Text>
                                <Binding Path="PlanMinutes">
                                    <Binding.ValidationRules>
                                        <rules:IntRangeRule>
                                            <rules:IntRangeRule.ValidRange>
                                                <rules:IntRangeChecker Maximum="59"
                                                                       Minimum="0" />
                                            </rules:IntRangeRule.ValidRange>
                                        </rules:IntRangeRule>
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>
                        <TextBlock VerticalAlignment="Center"
                                   Text=":" />
                        <TextBox Width="30"
                                 Margin="3,0,0,0"
                                 VerticalAlignment="Center">
                            <TextBox.Text>
                                <Binding Path="PlanSeconds">
                                    <Binding.ValidationRules>
                                        <rules:IntRangeRule>
                                            <rules:IntRangeRule.ValidRange>
                                                <rules:IntRangeChecker Maximum="59"
                                                                       Minimum="0" />
                                            </rules:IntRangeRule.ValidRange>
                                        </rules:IntRangeRule>
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>

                        <Button Width="25"
                                Height="25"
                                Margin="6,0,0,0"
                                VerticalAlignment="Center"
                                HorizontalContentAlignment="Right"
                                Command="{Binding SetNowCommand}"
                                Style="{StaticResource BackgroundButton}"
                                ToolTip="Set preview date/time to now"
                                ToolTipService.ShowOnDisabled="True">
                            <Grid>
                                <Path Margin="5"
                                      Data="{StaticResource SS_ClockSVG}"
                                      Fill="{StaticResource ButtonForegroundBrush}"
                                      Stretch="Uniform" />
                            </Grid>
                        </Button>
                    </StackPanel>

                    <TextBlock Grid.Row="1"
                               Grid.Column="0"
                               MaxWidth="80"
                               VerticalAlignment="Center"
                               FontWeight="Bold"
                               Text="Profile" />
                    <ComboBox Grid.Row="1"
                              Grid.Column="1"
                              Width="220"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Center"
                              DisplayMemberPath="Value"
                              ItemsSource="{Binding ProfileChoices}"
                              SelectedValue="{Binding SelectedProfileId}"
                              SelectedValuePath="Key" />
                    <StackPanel Grid.Row="2"
                                Grid.Column="1"
                                Orientation="Horizontal">
                        <Button Width="50"
                                Height="25"
                                Margin="0,3,0,0"
                                HorizontalAlignment="Left"
                                Command="{Binding PlanPreviewCommand}"
                                Content="Run"
                                ToolTip="Run the planner preview" />
                        <Button Width="100"
                                Height="25"
                                Margin="4,3,0,0"
                                HorizontalAlignment="Left"
                                Command="{Binding PlanPreviewResultsCommand}"
                                Content="View Details"
                                ToolTip="View planner details" />
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>

        <Border BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1"
                Visibility="{Binding ShowPlanPreview, Converter={StaticResource BooleanToVisibilityCollapsedConverter}}">
            <TreeView BorderThickness="0"
                      ItemsSource="{Binding InstructionList}">
                <TreeView.Template>
                    <ControlTemplate>
                        <ScrollViewer Height="300"
                                      VerticalScrollBarVisibility="Auto">
                            <ItemsPresenter />
                        </ScrollViewer>
                    </ControlTemplate>
                </TreeView.Template>
                <TreeView.Resources>
                    <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}"
                                     Color="{Binding Source={StaticResource ProfileService}, Path=ActiveProfile.ColorSchemaSettings.ColorSchema.ButtonBackgroundSelectedColor}" />
                    <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}"
                                     Color="{Binding Source={StaticResource ProfileService}, Path=ActiveProfile.ColorSchemaSettings.ColorSchema.ButtonBackgroundSelectedColor}" />
                    <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}"
                                     Color="{Binding Source={StaticResource ProfileService}, Path=ActiveProfile.ColorSchemaSettings.ColorSchema.TertiaryBackgroundColor}" />
                    <Style TargetType="{x:Type TreeView}">
                        <Style.Triggers>
                            <Trigger Property="IsEnabled"
                                     Value="false">
                                <Setter Property="FontWeight"
                                        Value="ExtraLight" />
                                <Setter Property="FontStyle"
                                        Value="Italic" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                    <Style TargetType="{x:Type TreeViewItem}">
                        <Setter Property="Margin"
                                Value="0,3,0,3" />
                    </Style>
                </TreeView.Resources>
            </TreeView>
        </Border>
        <Border BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1"
                Visibility="{Binding ShowPlanPreviewResults, Converter={StaticResource BooleanToVisibilityCollapsedConverter}}">
            <ScrollViewer Height="300"
                          VerticalScrollBarVisibility="Auto">
                <TextBlock FontFamily="Courier New"
                           Text="{Binding PlanPreviewResultsLog}" />
            </ScrollViewer>
        </Border>
    </StackPanel>
</UserControl>